{
  "name": "vesta-cx",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "cleanc clean",
    "build:clean": "pnpm run clean && pnpm run build",
    "dev:clean": "pnpm run clean && pnpm run dev",
    "install:clean": "pnpm run clean && node -e \"try{require('fs').rmSync(require('path').join(process.cwd(),'node_modules'),{recursive:true,force:true})}catch(_){}\" && pnpm i",
    "dev": "turbo run dev",
    "format": "turbo run format --filter='!./' && prettier --write .",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@vesta-cx/config": "workspace:*",
    "cleanc": "workspace:*",
    "eslint": "^10.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "turbo": "^2.8.10",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "svelte-preprocess",
      "unrs-resolver",
      "workerd"
    ],
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "svelte-preprocess"
    ]
  }
}