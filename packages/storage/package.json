{
  "name": "@vesta-cx/storage",
  "version": "1.0.0",
  "description": "Storage provider abstraction for R2, S3, and future Uploadthing",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./r2-workers": {
      "types": "./dist/r2-workers.d.ts",
      "import": "./dist/r2-workers.js",
      "default": "./dist/r2-workers.js"
    },
    "./r2-s3": {
      "types": "./dist/r2-s3.d.ts",
      "import": "./dist/r2-s3.js",
      "default": "./dist/r2-s3.js"
    },
    "./s3": {
      "types": "./dist/s3.d.ts",
      "import": "./dist/s3.js",
      "default": "./dist/s3.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "pnpm run clean && pnpm run build",
    "clean": "cleanc clean",
    "dev": "tsc --watch",
    "dev:clean": "pnpm run clean && pnpm run dev",
    "format": "prettier --write .",
    "install:clean": "pnpm run clean && node -e \"try{require('fs').rmSync(require('path').join(process.cwd(),'node_modules'),{recursive:true,force:true})}catch(_){}\" && pnpm i",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.995.0",
    "@aws-sdk/s3-request-presigner": "^3.995.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260228.0",
    "@types/node": "^25.3.0",
    "@vesta-cx/config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@cloudflare/workers-types": {
      "optional": true
    }
  }
}
