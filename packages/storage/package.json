{
	"name": "@vesta-cx/storage",
	"version": "1.0.0",
	"description": "Storage provider abstraction for R2, S3, and future Uploadthing",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./r2-workers": {
			"types": "./dist/r2-workers.d.ts",
			"import": "./dist/r2-workers.js",
			"default": "./dist/r2-workers.js"
		},
		"./r2-s3": {
			"types": "./dist/r2-s3.d.ts",
			"import": "./dist/r2-s3.js",
			"default": "./dist/r2-s3.js"
		},
		"./s3": {
			"types": "./dist/s3.d.ts",
			"import": "./dist/s3.js",
			"default": "./dist/s3.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.700.0",
		"@aws-sdk/s3-request-presigner": "^3.700.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.0.0",
		"@types/node": "^24.10.0",
		"config": "workspace:*",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"@cloudflare/workers-types": "^4.0.0"
	},
	"peerDependenciesMeta": {
		"@cloudflare/workers-types": {
			"optional": true
		}
	},
	"files": [
		"dist"
	]
}